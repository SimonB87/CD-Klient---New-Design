h1
	font-family: var(--font-family-light)
	font-weight: 300
	font-size: 54px
	font-size: 3.375rem
	line-height: 54px
	line-height: 3.375rem
	margin: 0px

h2
	font-family: var(--font-family-light)
	font-weight: 300
	font-size: 28px
	font-size: 1.75rem
	line-height: 28px
	line-height: 1.75rem
	letter-spacing: 0.01em
	margin: 0px

h3
	font-family: var(--font-family-light)
	font-weight: 300
	font-size: 24px
	font-size: 1.5rem
	letter-spacing: 0.01em
	margin: 0px

.sizeH3
	font-family: var(--font-family-light)
	font-weight: 300
	font-size: 24px
	font-size: 1.5rem
	letter-spacing: 0.01em
	margin: 0px

h4
	font-family: var(--font-family-light)
	font-weight: 300
	font-size: 18px
	font-size: 1.125rem
	letter-spacing: 0.02em
	margin: 0px

h5
	font-family: var(--font-family-bold)
	font-weight: bold
	font-size: 16px
	font-size: 1rem
	letter-spacing: 0.02em
	margin: 0px
	color: var(--dark-grey-opacity60)

h6
	font-family: var(--font-family)
	font-weight: normal
	font-size: 12px
	letter-spacing: 0.02em
	margin: 0px

.fs14, .fs14 h5
	font-size 14px !important

.clickable
	h1,h2,h3,h4,h5,h6
		cursor: pointer

	h2
		text-align center
		line-height 1rem 
