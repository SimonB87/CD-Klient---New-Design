#innerModal
	position: fixed
	min-width: 600px
	left: 50%
	top: 50%
	transform: translate(-50%, -50%)
	margin: 0
	border: 0
	border-radius var(--border-radius)
	overflow hidden

.modal
	width: 100%
	display: block
	position: relative
	top: 50%
	background: var(--white)
	opacity: 1
	transition: all 0.5s ease-in-out

	&-open
		overflow hidden

		.arc-button *
			color: var(--white) !important

	&-wrapper
		width: 100%
		height: 100%
		visibility: visible
		opacity: 1
		transition: all 0.25s ease-in-out
		padding-bottom: 50px !important

		&.open
			opacity: 1
			visibility: visible

			.modal
				margin-top: -200px
				opacity: 1

		&.translate
			//transform: translateY(-10px);

	&-header
		width: 100%
		padding: 12px 30px
		overflow: hidden
		background: var(--blue-brightest) /* serbian line */
		
		*
			font-size: 20px
			color: var(--blue-dark) /* serbian line */

		&.modal-alert
			background: var(--blood-orange)
			
	&-content
		padding: 10%

	&-close
		font-size: 28px
		display: block
		float: right
		color: var(--white)

	&-buttons
		width:100%
		position:absolute
		bottom:10px
		height:40px
		background-color: var(--white)

		.arc-button
			padding: 0 !important
			border: 0 !important

		.btn-remove button
			background-color: #f7dfda !important

		button, .button a
			width:50%
			height:40px
			line-height:35px
			text-align:center
			float:left
			border-radius 0 !important
			background-color:#EEE
			color:#000 !important
			transition:0.3s
			text-transform:uppercase
			font-weight:bold
			height:50px !important
	
			&:hover
				background-color:darken(#EEE,5%)

			&:after
				display none !important
							
			&:nth-of-type(2)
				float:right
				color: var(--white)
				

		.button
			&.btn-success a
				display: block;
				background-color: var(--green) !important;
				border-color: var(--green) !important;
				width: 100%;
				height: 57px !important;
				line-height: 30px !important;
				color: #fff !important;

				&:hover
					background-color: var(--dark1-green) !important
					border-color: var(--dark2-green) !important
					box-shadow:  0 0.125rem 0.625rem var(--light1-green-opacity-40), 0 0.0625rem 0.125rem var(--light1-green-opacity-50) !important			

				
