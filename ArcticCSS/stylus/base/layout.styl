	.logInLanguages 
		a
			font-size: 0.9rem;
			text-decoration: none;
			transition: all 0.25s ease-in 0.25s;
			color: #6c757d;
			height: 2rem;
			line-height: 2rem;
			padding: 0 1.25rem 0 1.25rem;
			margin: 0;
			width: 100%;
			display: block;

