body
	font-family: "Segoe UI", "Open Sans", "Helvetica Neue", sans-serif
	min-height: 620px
	overflow auto
	overflow-x : hidden
	-webkit-text-size-adjust: none;
	-ms-text-size-adjust: none;
	-moz-text-size-adjust: none;
	text-size-adjust: none;
	width: 100%
	height: 100%
	margin: 0


	@media screen and (max-width: 850px)
		overflow-x : auto

	.elo-panel-wrap div.panel-cell
		display: initial;
		width: initial

	.width-auto
		width: auto !important;

	.elo-fixed-button
		width: 150px !important;
		height: 71px;

	.flright
		float:right

		.panel-cell
			float: right
			
	.fullWidth
		width: 100%

	.displayFlex div.panel-row
		display: flex
		flex-wrap: wrap
		align-items: stretch

	.bottomAlign
		display: flex
		align-items: flex-end


	.panel-cell
		&.panel-align-top
			vertical-align: top

		&.panel-align-bottom
			vertical-align: bottom

		&.panel-align-middle
			vertical-align: middle

		&.panel-v-stretch, &.panel-v-stretch > *
			height: 100%

		&.panel-autofit-height
			height: 1px

	.panel-align
		&-left
			text-align: left

		&-right
			text-align: right

		&-center
			text-align: center


	.center-all
		text-align center
		
		*
			text-align center


	.panel-h-stretch, .panel-h-stretch > *
		width: 100%

	.panel-auto-fit-width
		width: 1px

	.panel-cell.panel-h-filling
		font-size: 0px

	.panel-cell.panel-v-filling
		height: 100%


	.panel-table
		display: inline-table
		border-collapse: collapse
		line-height: 0
		width: 100%
		height: 100%

	.panel-row
		display: table-row

	.panel-cell
		display: table-cell
		vertical-align: top
		


	.disabled input
		pointer-events none
		border: 1px solid #ced4da
		color: #6c757d
		background-color: #e9ecef
		

	.button > button
		width: 100%


	.component
		padding: 0.5rem
		margin: 0px
		display: inline-block
		text-align: left
		line-height: 1.5

		.hidden
			visibility: hidden
		
		.collapsed
			display: none

		.h-align-left
			text-align: left

		.h-align-right
			text-align: right

		.h-align-center
			text-align: center

		.v-align-top
			vertical-align: top

		.v-align-bottom
			vertical-align: bottom

		.v-align-center
			vertical-align: middle

		&.formplaceholder
			line-height: 0
			padding: 0px

		&.panel
			line-height: 0
			padding: 0px

		.arc-groupbox
			padding: 0em

		&.isCurrentlySelected
			font-weight: 600
			color: #4390df

		&.isCurrentlySelected.isCurrentlySelected-sign div 
			width: fit-content
			position: relative
				
		&.isCurrentlySelected.isCurrentlySelected-sign div:after 
			position: absolute
			content: "Current"
			width: fit-content
			bottom: -.35rem
			transform: translate(0.5rem, 0.5rem)
			border: 3px solid #68a6e5
			padding: 0.5rem 0.75rem
			text-align: center
			border-radius: 0.75rem
			opacity: 0.7
			color: var(--blue-light) ; /* Line - Serbia */

	div
		&#mainFormHolder, &#formPlaceholder
			width: 100% !important
			max-width: 100% !important

			& > *
				width: 100%
				vertical-align: top

		&.arc-full-panel
			width: calc(100% - 23px) !important;




	.relative
		position: relative !important
	
	.absoluteCenter
		position: fixed
		left:50%
		top: 50%
		transform: translate(-50%, -50%)
		display: block
		width: auto !important

		&.box
			padding: 50px !important
			box-shadow: var(--large-shadow)
			background-color #fff !important

			span
				font-size 14px 

	.overflow-auto
		overflow: auto !important

	.2rem
		font-size: 1.7rem !important

	.mw800
		max-width 800px
		display block !important
		margin: 0 auto !important	


	.arc
		&-panel-limited
			max-width: 1000px;
			width: 100%;
			margin: 0 auto;
			margin-left: calc(50% - 500px);
			/* //jump up animation
			-webkit-animation: scale-up-center 0.3s cubic-bezier(0.390, 0.575, 0.565, 1.000) both;
			animation: scale-up-center 0.3s cubic-bezier(0.390, 0.575, 0.565, 1.000) both;*/
			
			@media screen and (max-width: 1279px)
				margin-left: 0 !important
			

		&-padding-right
			padding-right: 16px !important

		&-panel-main > .panel-table > .panel-row > .panel-cell
			@media screen and (max-width: 1365px)
				display: block !important
				width: 100%
				max-width: 100%
				min-width: 100%

		&-button.btn-remove.absoluteTopRight
			position: absolute !important
			top: 6px !important;
			right: -8px !important;

