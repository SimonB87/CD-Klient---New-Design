.arc
	&-groupbox, &-collapsiblegroupbox
		fieldset
			position:relative
			border:0
			box-shadow: var(--large-shadow)
			border-radius: var(--border-radius)
			background: #fff
			width: 100%
			padding-bottom: 20px
			
			&.cgb-collapsed
				border-top: 0

			.component 
				width: 100%
				padding: 0

			legend
				border-radius: var(--border-radius)
				background: #fff
				padding: 0.5em 1em !important

				& > div > span
					&:nth-of-type(2)
						padding-right: .6em

					&:first-of-type
						padding-left: .4em

.groupbox > fieldset
	height: 100%
	& > legend
		padding-left: 0.5em
		padding-right: 0.5em
		display: block 

	& > .component
		width: 100%
		height: 100%

html .cgb
	&-default > fieldset.cgb-collapsed
		border-top: 0;

	& > fieldset > legend > div > span:nth-of-type(2)
		display inline-block
		padding: 0.5em 1em 0.5em 0.2em !important
