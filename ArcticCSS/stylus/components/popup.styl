.arc
	&-popup
		background rgba(255,255,255,0.5)
		position fixed
		bottom 6px
		left 6px
		width 251px !important
		min-height 225px
		border-radius 0.35rem
		box-shadow inset rgba(0, 0, 0, 0.05) 0px 6px 24px 0px, rgba(0, 0, 0, 0.08) 0px 0px 0px 1px
		transition .5s all
		z-index 1001

		a
			margin-left 5px !important
			padding 0 !important

		&:not(.gmsPopup)
			@media screen and (max-height: 780px)
				position relative !important
				margin-top 20px

		&.arc-decent
			height 150px !important
			max-height 150px !important
			min-height 150px !important

		.arc-button:not(.arc-changeco)
			position absolute
			bottom 5px
			max-width 50px
			min-height 50px

			button
				border-radius: 50%
				height: 38px !important
				
		.arc-settings
			left 10px

			button:hover
				background-color var(--blue); /* Line - Serbia */

		.arc-userInfo
			left 70px

			button:hover
				background-color var(--blue); /* Line - Serbia */


		.arc-documents a
			left -8px
			border-radius: 50%
			background-color var(--blue-light)
			width: 38px
			bottom: 0 !important

			&:hover
				background-color var(--blue-dark2)

/*			@media screen and (max-height: 850px)
			
