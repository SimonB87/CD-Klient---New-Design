				background-color transparent !important

			&:before
				font-size: 20px;
				color: #fff;
				bottom: -33px;
				position: relative;
				z-index: 1;
				left: 14px;
				pointer-events: none;
*/


		.fa-book
			bottom 5px !important

			@media screen and (max-height: 950px)
				bottom 0px !important

			&:before
				display none

			a:before
				content: "\f02d";
				font: normal normal normal 14px/1 FontAwesome;
				font-size: inherit;
				text-rendering: auto;
				-webkit-font-smoothing: antialiased;
				font-size: 20px;
				color: #fff;
				top: 6px;
				position: relative;		

			&:hover
				background transparent !important

		.arc-logout
			left: 190px

			button
				background var(--red-solid)
				
				&:hover
					background var(--red-solid) !important
					
							
		.editor-tooltip-icon
			display none !important
			
		.arc-userpanel .caption-wrap .caption-text
			padding-left 5px
			
		.arc-hyperlink
			border-left: 0 !important
			
			&:hover
				background-color: transparent	

	&-userInfo
		button
			padding: 0 !important
		
