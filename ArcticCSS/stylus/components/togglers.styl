.toggle-container
	display: inline-block
	width: 60px
	height: 30px
	border: 3px solid #bfbebe
	border-radius: 30px
	position: relative
	cursor: pointer
	background-color: #f5f2f2
	transition: border-color 300ms

	input[type=checkbox]
		position: absolute
		clip: rect(0,0,0,0)

	.caption-wrap
		position: absolute
		top: 0
		left: 0
		right: 0
		bottom: 0
		border-radius: 30px
		transition: all 300ms

		&::before
			content: ''
			cursor: pointer
			display: inline-block
			width: 30px
			height: 30px
			background-color: #fff
			border-radius: 50%
			box-shadow: 1px 1px 3px rgba(0,0,0,0.5) 
			transition: all 300ms ease-in-out

	 &:checked + .toggle-button
		background-color: #32db64

		&::before
			margin-left: 30px