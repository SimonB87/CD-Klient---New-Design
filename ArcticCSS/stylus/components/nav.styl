html body 
	.arc, div
		&-nav, &.sidePanel
			padding-top: 0
			padding-bottom: 30px !important
			background: #4390df
			transition: all .2s
			background: #fff
			box-shadow: var(--large-shadow)
			position: fixed
			top: 102px !important;
			max-width: 263px;
			bottom: 0
			left: 0
			-webkit-text-size-adjust:none;
			-ms-text-size-adjust:none;
			-moz-text-size-adjust:none;
			text-size-adjust:none;

			a		
				font-size: 13px
				text-decoration: none
				transition: all .25s ease-in .25s
				color: #6c757d
				height: 30px;
				line-height: 30px;
				padding: 0 13px 0 13px;
				margin: 0
				margin-left -15px 
				width: 100%
				display: block

			h3
				padding: 5px 10px 0px 20px
				text-align center
				border-bottom: 0;

			h5
				font-family: var(--font-family)
				font-weight: normal
				color: #fff
				

			.component.label
				padding: 1.5rem

			.arc-hyperlink
				padding: 0
				border-left 1em transparent solid !important
				transition: .4s all !important

				@media screen and (max-height: 950px)
					padding: 0 !important;
					padding-left: 6px !important;


				&:hover
					color: #da624a
					background: var(--blue-brightest)
				/*
				a:hover
					color: #E00000;
					font-weight: 500;*/


			.active, .sideLink-active
				color: #da624a
				background: var(--blue-brightest)
				border-left: 1em solid var(--blue-medium) !important;
				/*
				a
					color: #E00000;
					font-weight:  500;*/

			.subMenuItem
				padding-bottom: 16px !important

				& > a
					position: absolute
					transform: translate(20px, -15px)
					width: 89%

					&:after
						position: absolute
						left: 0
						content: "\00bb "
						font-size: 1.5rem
						top: -1px
						content: "\232A "
						font-size: 0.8rem


			.longsubMenuItem a
				line-height: 15px !important;
				
			
			.arc-declistHeadings h3
				text-align center

			&-bar
				padding-left 6px !important
				padding-right 15px !important
				height 50px
				display block
				margin-left 6px
				background #FFF 

				button
					line-height: 1 !important

				div
					display inline-block
					width 100%

				.panel-table
					height: 50px

				&-controls
					background: #fff
					border: #dee2e6 solid 1px
					border-radius: var(--border-radius)
					padding: .5rem 0
					overflow: hidden
					top: 0
					z-index: 99

					.container-box-empty
						display: none

					.navbar-buttons.lotsOfButtons .panel-cell
						@media screen and (max-width: 1400px)
							max-width: 9.5% !important;
							width: 9.5% !important
							
							.button
								width: 100% !important 

								button
									padding: 0 2px !important

								
					.lotsOfButtons .declist-icon .panel-cell
						@media screen and (max-width: 1400px)
							width: auto !important;
							max-width: initial !important;

				&-space
					display: none
					height: 50px
					border: 1px transparent solid
					
				.toTop
					margin-left: 86px; 

					button
						font-size: 2em
						padding: 0 !important
						min-height: 39px !important;
				
				&.tmp_icons
					.declist-icon div.panel-cell
						width: 40px !important
						float: left !important	
						margin-right: 2px !important
						
						.fa
							font-size 20px !important

						button
							min-height: 39px !important
							max-height 39px !important
							width 39px
							transition: all 0.4s ease-in-out
							background-color: var(--blue-light) !important
							border-radius: 0.35rem;
							
							&:after
								content: ''
								position: absolute
								top: 0
								left: 0
								width: 0
								height: 100%
								background-color: rgba(255,255,255,0.4)
								-webkit-transition: none
								-moz-transition: none
								transition: none

							&:hover
								background-color: var(--blue-dark2) !important
			
							&:hover:after
								width: 120% !important
								background-color: rgba(255,255,255,0) !important
								transition: all 0.4s ease-in-out


			&.smaller a
				font-size 0.9em 

			&.arc-larger
				top 108px !important

			&-controls
				position: relative
				z-index: 99


			&-sticky
				color: #fff !important
				left: 0;

				& > div
					background-color: #4390df !important
					max-height: 50vh
					overflow-y: scroll
					

				.shadow-top
					box-shadow: 0 -5px 5px -5px #333
					
				.sffw-csp
					left: 0
					
			&-controlBtns
				display: inherit

				div
					width: initial !important
					max-width: initial !important		

			&-label h3
				font-size: 1.35rem !important

			&-headings
				padding: 6px;
				height: 88px;
				background: #fff;
				border: 0;
				box-shadow: var(--large-shadow)
				
				.component.label
					padding: initial !important
					border-bottom initial
					background initial 
					
					h3
						text-align center
						padding 6px 0
						
					h4
						text-align center
						

			&-declistHeadings
				border-bottom: rgba(0,0,0,0.04) solid 1px !important


				h3
					padding 7px
					position relative

					&:after
						content: " "
						width: 80px
						background: #f5f9fa
						height: 62px
						position: absolute
						right: -40px
						top: -6px
						display block

				.component.label h3
					padding 26px 0

			&-bar
				.arc-button
					& > button
						min-height: 39px !important
						max-height 39px !important
						min-width: 39px

			&.sidePanel
				width: 263px !important;
				z-index: 9999;

				.hyperlink
					width: 100% !important 

				a
					height: 2.5rem;
					line-height: 2.5rem;
					
				button, .arc-button
					width: 100% !important


html body .arc-nav .arc-popup .arc-hyperlink
	border-left: 0 !important

html body div:not(.arc-GMS) .arc-nav
	z-index: 1000