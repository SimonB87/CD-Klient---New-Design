/* --- GMS --- */

.arc-GMS
	*
		box-sizing: border-box
	
	h2
		display block
		min-height 63px
		background-color: #f5f9fa !important;
		border-bottom: 1px solid #dfdfdf;
		padding 15px 20px

	.arc-headings
		min-height: 63px !important;

	.arc-nav-bar
		height: auto
		box-shadow none !important

		.panel-table
			height: auto



	div[data-name="panel_ListApplication_Buttons"],
	 div[data-name="panel_ListGuarantee_Buttons"],
	 div[data-name="panel_ListGuarantor_Buttons"]
		margin-bottom: 10px;

		& > div
			margin-right 10px;
			border: #dee2e6 solid 1px;
			border-radius: 0.35rem;

	& .sffw-list-paging /*list fix*/
		display: flex
		padding: 1rem
	
	.externalLink
		&:hover
			background: transparent
		
		a
			color: #212529 !important

	.arc-repeater .sffw-group-item-body .displayBlock
		width: 100%


	.formplaceholder .panel-cell 
		width auto !important
	
	.subMenuItem
		padding-top: 10px !important

	.arc-nav
		[data-name=acc_queries] a
			line-height: 15px !important
			
		[data-name=hyperLink18] a, [data-name=hyperLink15] a
			padding-top 9px
			

	.arc-popup .arc-button:not(.arc-changeco)
		bottom: 5px !important
	
	
	&.arc-recordDetail
		.formplaceholder
			position absolute
			top 0


	.header-groupbox, .m8-groupbox

		fieldset
			border #cbcbcb 1px solid
			border-radius var(--border-radius)

	.sffw-error-summary table
		width 100%

	.sffw, sffw
		&-busy-indicator, &-incontent-wrapper
			width: 100vw;
			position: relative;
			left: 50%;
			right: 50%;
			top:0
			bottom:0
			margin-left: -50vw;
			z-index: 1000;
			margin-right: -50vw;
			background-color: rgba(203,203,203,.5)


#mainFormHolder .panel-table
	vertical-align top
	
#mainFormHolder .panel-row .panel-table
	vertical-align initial

