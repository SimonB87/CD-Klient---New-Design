.logInLanguages 
	a
		font-size: 0.9rem;
		text-decoration: none;
		transition: all 0.25s ease-in 0.25s;
		color: var(--dark2-grey);
		height: 2rem;
		line-height: 2rem;
		padding: 0 1.25rem 0 1.25rem;
		margin: 0;
		width: 100%;
		display: block;

	div.langDevide.component
		height: 2rem;
		font-size: 1.5rem;
		transform: translate(4px,-4px);

		div
			color: var(--dark2-grey);


.declist-icon
	position: absolute
	left: 18px;
	top: 70px;

