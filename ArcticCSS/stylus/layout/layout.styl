.errorText
	position relative !important
	

.image img
	width: 100%
	height: 100%


.ui-block
	position: fixed
	left: 0px
	right: 0px
	top: 0px
	bottom: 0px
	background-color:  var(--grey-opacity-10)


	&-dialog
		display: inline-block
		position: fixed
		padding: 1em
		left: 0px
		right: 0px
		top: 40%
		text-align: center
		-webkit-box-shadow: 0px 0px 30px var(--dark1-grey)
		box-shadow: 0px 0px 30px var(--dark1-grey)
		background-color: var(--white)
		border: 1px solid var(--light5-grey)

		.ui-block-message
			font-size: 150%
			margin-bottom: 0.5em