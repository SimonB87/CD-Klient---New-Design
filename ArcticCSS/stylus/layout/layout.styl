body
	font-family: "Segoe UI", "Open Sans", "Helvetica Neue", sans-serif
	min-height: 620px
	overflow auto
	overflow-x : hidden
	-webkit-text-size-adjust: none;
	-ms-text-size-adjust: none;
	-moz-text-size-adjust: none;
	text-size-adjust: none;
	width: 100%
	height: 100%
	margin: 0

	@media screen and (max-width: 850px)
		overflow-x : auto

.component
	padding: 0.5rem
	margin: 0px
	display: inline-block
	text-align: left
	line-height: 1.5

	.hidden
		visibility: hidden
	
	.collapsed
		display: none

	.h-align-left
		text-align: left

	.h-align-right
		text-align: right

	.h-align-center
		text-align: center

	.v-align-top
		vertical-align: top

	.v-align-bottom
		vertical-align: bottom

	.v-align-center
		vertical-align: middle

	&.formplaceholder
		line-height: 0
		padding: 0px

	&.panel
		line-height: 0
		padding: 0px

	.arc-groupbox
		padding: 0em

	&.isCurrentlySelected
		font-weight: 600
		color: var(--blue)

	&.isCurrentlySelected.isCurrentlySelected-sign div 
		width: fit-content
		position: relative
			
	&.isCurrentlySelected.isCurrentlySelected-sign div:after 
		position: absolute
		content: "Current"
		width: fit-content
		bottom: -.35rem
		transform: translate(0.5rem, 0.5rem)
		border: 3px solid var(--light2-blue)
		padding: 0.5rem 0.75rem
		text-align: center
		border-radius: 0.75rem
		opacity: 0.7
		color: var(--blue-light)

.panel-h-stretch, .panel-h-stretch > *
	width: 100%

.panel-auto-fit-width
	width: 1px

.panel-cell.panel-h-filling
	font-size: 0px

.panel-cell.panel-v-filling
	height: 100%

.panel-table
	display: inline-table
	border-collapse: collapse
	line-height: 0
	width: 100%
	height: 100%

.panel-row
	display: table-row

.panel-cell
	display: table-cell
	vertical-align: top

.arc-content
	left 263px
	top: 51px
	width: calc(100% - 263px)
	position relative
	transition: .4s all

.closedNav .arc-content
	width: 100%
	left 0

.closedNav .arc-navToggler
	max-width: 53px

.arc-header
	width: calc(100% - 263px)

.closedNav .arc-header
	width: 100%

.menuspacer
		max-width: 51px
		min-width: 51px

.elo-panel-wrap div.panel-cell
	display: initial;
	width: initial

.bold, .bold *
	font-family var(--font-family-bold) !important


.width-auto
	width: auto !important;

.elo-fixed-button
	width: 150px !important;
	height: 71px;

.flright
	float:right

	.panel-cell
		float: right
		
.fullWidth
	width: 100%

.displayFlex 
	> div.panel-table > div.panel-row
		display: flex
		flex-wrap: wrap
		align-items: stretch							

		@media all and (-ms-high-contrast: none), (-ms-high-contrast: active) // IE10+ CSS
			max-width: calc(100vw - 263px)

		> div.panel-cell
			display: inline-flex

	&.arc-panel-uniform
		> div.panel-table > div.panel-row > div.panel-cell > div.component > .arc-collapsiblegroupbox > div.cgb
			height: 100%

			> fieldset
				height: 100%

.closedNav .displayFlex
	> div.panel-table > div.panel-row
		@media all and (-ms-high-contrast: none), (-ms-high-contrast: active) // IE10+ CSS
			max-width: 100vw

.bottomAlign
	display: flex
	align-items: flex-end


.panel-cell
	&.panel-align-top
		vertical-align: top

	&.panel-align-bottom
		vertical-align: bottom

	&.panel-align-middle
		vertical-align: middle

	&.panel-v-stretch, &.panel-v-stretch > *
		height: 100%

	&.panel-autofit-height
		height: 1px

.panel-align
	&-left
		text-align: left

	&-right
		text-align: right

	&-center
		text-align: center


.center-all
	text-align center
	
	*
		text-align center

.disabled input
	pointer-events none
	border: 1px solid var(--light5-grey)
	color: var(--dark2-grey)
	background-color: var(--light2-grey)
	

.button > button
	width: 100%

div
	&#mainFormHolder, &#formPlaceholder
		width: 100% !important
		max-width: 100% !important

		& > *
			width: 100%
			vertical-align: top

.relative
	position: relative !important

.absoluteCenter
	position: fixed
	left:50%
	top: 50%
	transform: translate(-50%, -50%)
	display: block
	width: auto !important

	&.box
		padding: 50px !important
		box-shadow: var(--large-shadow)
		background-color var(--white) !important

		span
			font-size 14px 

.overflow-auto
	overflow: auto !important

.mw800
	max-width 800px
	display block !important
	margin: 0 auto !important	


.arc
	&-panel-limited
		max-width: 1000px;
		width: 100%;
		margin: 0 auto;
		margin-left: calc(50% - 500px);
		-webkit-animation: scale-up-center 0.3s cubic-bezier(0.390, 0.575, 0.565, 1.000) both;
		animation: scale-up-center 0.3s cubic-bezier(0.390, 0.575, 0.565, 1.000) both;
		
		@media screen and (max-width: 1279px)
			margin-left: 0 !important

	&-panel-uniform > .panel-table > .panel-row > .panel-cell > .component
		max-width: 800px
		min-width: 800px

	&-padding-right
		padding-right: 16px !important

	&-panel-main > .panel-table > .panel-row > .panel-cell
		@media screen and (max-width: 1365px)
			display: block !important
			width: 100%
			max-width: 100%
			min-width: 100%

	&-button.btn-remove.absoluteTopRight
		position: absolute !important
		top: 6px !important;
		right: -8px !important;


